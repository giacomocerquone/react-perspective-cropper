    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^3.4.4",
    "standard-version": "^9.5.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "caniuse-lite": "^1.0.30001375",
